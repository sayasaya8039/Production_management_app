{
  "$schema": "https://claude.ai/schemas/settings.json",
  "permissions": {
    "allow": [
      "Bash(black *)",
      "Bash(bun *)",
      "Bash(bunx *)",
      "Bash(bunx playwright *)",
      "Bash(cargo *)",
      "Bash(code *)",
      "Bash(cp *)",
      "Bash(crx3 *)",
      "Bash(cursor *)",
      "Bash(eslint *)",
      "Bash(gh *)",
      "Bash(git *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git pull *)",
      "Bash(git push *)",
      "Bash(git rebase *)",
      "Bash(go *)",
      "Bash(jest *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(mv *)",
      "Bash(mypy *)",
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(ollama *)",
      "Bash(pip *)",
      "Bash(pnpm *)",
      "Bash(prettier *)",
      "Bash(pyinstaller *)",
      "Bash(pytest *)",
      "Bash(python *)",
      "Bash(rm *.pyc)",
      "Bash(rm -r *)",
      "Bash(rm -rf .next*)",
      "Bash(rm -rf __pycache__*)",
      "Bash(rm -rf build*)",
      "Bash(rm -rf dist*)",
      "Bash(rm -rf node_modules*)",
      "Bash(rm bun.lockb)",
      "Bash(ruff *)",
      "Bash(rustc *)",
      "Bash(sed *)",
      "Bash(tauri *)",
      "Bash(tsc *)",
      "Bash(uv *)",
      "Bash(vitest *)",
      "Bash(web-ext *)",
      "Bash(wrangler *)",
      "Bash(yarn *)",
      "Edit",
      "Glob",
      "Grep",
      "NotebookEdit",
      "Read(*)",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write(*)",
      "Bash(antigravity *)",
      "Bash(ralph *)",
      "Bash(safe-write *)",
      "Bash(bnmp *)",
      "Bash(zig *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(> /dev/sda)",
      "Bash(:(){:|:&};:)",
      "Bash(mkfs*)",
      "Bash(dd if=*)"
    ]
  },
  "env": {
    "LANG": "ja_JP.UTF-8",
    "BUN_INSTALL": "/c/Users/Owner/.bun"
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"decision\":\"block\",\"reason\":\"Edit禁止: safe-write/Python/PowerShellを使用\"}"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"decision\":\"block\",\"reason\":\"Write禁止: safe-write/Python/PowerShellを使用\"}"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"systemMessage\":\"multi-AI MCP: 設計=GLM-4.7, レビュー=ChatGPT, アイデア=Grok, 調査=Perplexity\"}"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"systemMessage\":\"multi-AI協力確認: GLM-4.7/ChatGPT/Grok/Perplexity\"}"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"systemMessage\":\"multi-AI壁打ち: ask_zai/openai_code_review/grok_brainstorm/ask_perplexity (英文必須)\"}"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"systemMessage\":\"コンテキスト圧縮\\! multi-AI継続: GLM-4.7/ChatGPT/Grok/Perplexity\"}"
          }
        ]
      },
      {
        "matcher": "context",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"systemMessage\":\"multi-AI継続: 設計=GLM-4.7, レビュー=ChatGPT, アイデア=Grok, 調査=Perplexity\"}"
          }
        ]
      }
    ]
  }
}